
foo {
  *{{N=12; Ny=7; Rn0=10; np=5; rim=1}}
  *{s 1/N {n=Rn0}}
  *{x -(N-1)/2 y -(Ny-1)/2}
  (Ny)*{y 1 {np=np+2}}
  (N)*{x 1 {n=n+10;}}
  RNDSLCIRC{s .75 rz n/3}
}

RNDSLCIRC {
  *{{k=n;width=coalesce(width,rim/100)}}
  (n)*{{T=round(rndf()*np)/np*PI*2; U=round(rndf()*np)/np*PI*2}}
    LINE{{x1=cos(T)*.5; y1=sin(T)*.5; 
      x2=cos(U)*.5; y2=sin(U)*.5; }}
}

