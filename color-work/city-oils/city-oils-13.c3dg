  *{{frame=.1} s .75} {
    city { y .225 z .1 shading skies {BREAK=0}}
    city { y -.15 z .1 shading skies {BREAK=1}}
  }
}



rule city {
  (BLOCKS)*{x 1/BLOCKS}
    (BLOCKS)*{z 1/BLOCKS layer -.1}
