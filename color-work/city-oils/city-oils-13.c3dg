  create_building{col0 (col0+.1)
  {frame=0.1+rndf()*.3}
  {SAT=.125}}
}
create_building {building{sx .5 sy .5 sz .8}}
building {
  block{}
  building_{z 1}
}
building_ .4 {
  2*{x .5} 2*{y .5}
  building { s .5 x -.5 y -.5 z -.5}
}
building_ 1{}
building_ 1{building{}}

block {
  RBOX{s .9 A -.5 PUSH SQUARE
    {SAT=rndf()**6}}
  cub{PUSH FRAME {}}
  if (rndf() < BREAK) {
    2*{} {
      MIX{
        rx 90
        y -.6
        s 2 B 1 R 1}
      RADBLUR{
        rx 90
        y .5 
        s 1.5
//        x (-.5+rndf())*2 
        A 1 R 1
      }
    }
  }
  
}


cub{
  PEEK{z -.5}
  PEEK{z .5 ry 180}
  PEEK{x -.5 ry -90}
  PEEK{x .5 ry 90}
  PEEK{y -.5 rx 90}
  PEEK{y .5 rx -90}
}

