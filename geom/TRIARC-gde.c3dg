split3_23 {
  split3_12{{
    x1=x3;y1=y3; x2=x1;y2=y1; x3=x2;y3=y2;
      c1ax=c3ax;c1ay=c3ay; c1bx=c3bx;c1by=c3by; 
        c2ax=c1ax;c2ay=c1ay; c2bx=c1bx;c2by=c1by;
          c3ax=c2ax;c3ay=c2ay; c3bx=c2bx;c3by=c2by;
  }}
