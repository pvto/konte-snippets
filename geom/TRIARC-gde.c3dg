          c2bx= (x2+x3) / 2 + (2*x1 - x2 - x3) * BULB;
          c2by= (y2+y3) / 2 + (2*y1 - y2 - y3) * BULB;
          c3ax= (x2+x3) / 2 + (2*x1 - x2 - x3) * BULB;
          c3ay= (y2+y3) / 2 + (2*y1 - y2 - y3) * BULB;
          c3bx= (x3+x1) / 2 - (2*x2 - x1 - x3) * BULB;
          c3by= (y3+y1) / 2 - (2*y2 - y1 - y3) * BULB;
          c1ax= (x3+x1) / 2 - (2*x2 - x1 - x3) * BULB;
